{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "composite": true,
    "declaration": true,
    "target": "ES2015",
    "module": "CommonJS",
    "lib": [
      "es2017",
      "es7",
      "es6",
      "dom",
      "es2022.error"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
  },
  "exclude": ["dist"]
}
