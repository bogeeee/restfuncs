{
  "name": "restfuncs-example-server",
  "version": "0.9.0",
  "description": "",
  "type": "module",
  "scripts": {
    "dev": "nodemon -e ts --exec \"clear && tspc --build && cross-env NODE_ENV=development ts-node server.js\"",
    "dev:faster_no_typeInfo": "npm run clean && nodemon --exec cross-env NODE_ENV=development tsx server.ts",
    "clean": "tspc --build --clean && rm -rf ../client/dist",
    "build": "tspc --build --force && npm run build:client",
    "build:client": "cd ../client && vite build",
    "start": "ts-node server.js"
  },
  "dependencies": {
    "express": "^4.17.13",
    "@types/express": "^4.17.13",
    "vite": "4.1.4",
    "restfuncs-server": "^0.x",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "tsx": "^3.12.1",
    "ts-node": "^10.9.1",
    "typescript": "5.1.x",
    "ts-patch": "^3.0.2",
    "restfuncs-transformer": "^0.9.6",
    "nodemon": "^2.0.15",
    "cross-env": "^7.0.3"
  }
}
