{
  "name": "@restfuncs/server",
  "version": "0.8.0",
  "description": "Offer server functions via REST interface. Together with @restfuncs/client, you can call them like they were local :). For use with express.",
  "main": "index.js",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "default": "./index.js"
    }
  },
  "scripts": {
    "dev_watch": "nodemon -e ts --exec npm run dev_compileAndRunOnce",
    "dev_compileAndRunOnce": "clear && tsc --incremental && ts-node index",
    "test": "ts-node test.ts"
  },
  "dependencies": {
    "express": "^4.17.13",
    "underscore": "^1.13.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/underscore": "^1.11.4",
    "ts-node": "^10.6.0",
    "typescript": "^4.8.4",
    "nodemon": "^2.0.15"
  },
  "license": "MIT"
}
