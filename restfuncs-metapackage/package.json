{
  "name": "restfuncs",
  "version": "0.8.0",
  "description": "Serve a REST API for your plain functions and seamlessly RPC-call them from the client (browser). Convenience meta package. You may use restfuncs-server and restfuncs-client instead.",
  "author": "Boris Gingold <bogeee@bogitech.de>",
  "repository": {
    "type": "git",
    "url": "https://github.com/bogeeee/restfuncs.git",
    "directory": "restfuncs-metapackage"
  },
  "license": "MIT",
  "main": "index.js",
  "exports": {
    ".": {
      "browser": "./dist/mjs/index.js",
      "default": "./index.js"
    }
  },
  "scripts": {
    "clean": "tsc --build --clean && rm -rf dist LICENSE readme.md",
    "build": "tsc && tsc -module ES6 --outDir dist/mjs"
  },
  "dependencies": {
    "restfuncs-server": "0.8.0",
    "restfuncs-client": "0.8.0"
  },
  "devDependencies": {
    "typescript": "^4.8.4"
  }
}
